{
  "$schema": "https://github.com/tauri-apps/tauri/releases/download/tauri-build-v2.0.0-beta.13/schema.json",
  "productName": "Motion Minute",
  "version": "0.1.0",
  "identifier": "com.rocketsolutions.minutemotion",
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": [
          "**/*.mov",
          "**/*.webm",
          "**/*.mp3"
        ],
        "enable": true
      }
    }
  },
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "bundle": {
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "videos/*",
      "audio/*"
    ]
  }
}
